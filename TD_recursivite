def est_palindrome_iteratif(chaine):
    res = ''
    for i in range(1,len(chaine)+1):
        res = res + chaine[-i]
    if chaine == res:
        return True
    else:
        return False
print(est_palindrome_iteratif('radar'))
print(est_palindrome_iteratif('python'))
